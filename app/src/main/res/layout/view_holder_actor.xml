<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/margin_top_actor_7"
    android:layout_marginHorizontal="@dimen/margin_horizontal_actor_16"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/actor"
        android:layout_width="@dimen/actor_image_width"
        android:layout_height="@dimen/actor_image_height"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/actor1" />

    <TextView
        android:id="@+id/actor_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGrey"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintEnd_toEndOf="@id/actor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actor"
        tools:text="@string/robert_downey_jr" />

</androidx.constraintlayout.widget.ConstraintLayout>